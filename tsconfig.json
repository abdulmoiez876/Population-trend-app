{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
